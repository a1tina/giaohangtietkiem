<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BillActivityFragment_1">

    <!-- TODO: Update blank fragment layout -->
    <HorizontalScrollView
        android:id="@+id/h_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cream">
        <LinearLayout
            android:id="@+id/linearlayout_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_all"
                android:minHeight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="Tất cả"
                android:textSize="16sp"
                android:textColor="#000"
                android:background="@drawable/button_style"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_wait"
                android:minHeight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="Chờ lấy"
                android:textSize="16sp"
                android:textColor="#000"
                android:background="@drawable/button_style"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_got"
                android:minHeight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="Đã lấy"
                android:textSize="16sp"
                android:textColor="#000"
                android:background="@drawable/button_style"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delivering"
                android:minHeight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="Đang giao"
                android:textSize="16sp"
                android:textColor="#000"
                android:background="@drawable/button_style"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_success"
                android:minHeight="30dp"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giao thành công"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="#000"
                android:background="@drawable/button_style"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_wait_return"
                android:minHeight="30dp"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang duyệt hoàn"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="#000"
                android:background="@drawable/button_style"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
               />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_returned"
                android:minHeight="30dp"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã hoàn trả"
                android:textSize="16sp"
                android:textColor="#000"
                android:background="@drawable/button_style"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#DDD"
        android:layout_below="@id/h_scrollview"
        android:layout_marginHorizontal="15dp"
        />
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line"
        android:background="@color/cream"
        android:padding="15dp"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbx_number_order"
            android:text="1 đơn hàng"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:paddingStart="5dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lọc"
            android:layout_alignParentEnd="true"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableLeft="@drawable/ic_baseline_filter_alt_24"
            />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout"
        android:paddingHorizontal="15dp"
        />
    <RelativeLayout
        android:id="@+id/nodata_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout"
        android:visibility="gone">
        <ImageView
            android:id="@+id/img_nothing"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/nothing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txt_nothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_nothing"
            android:text="Không có dữ liệu đơn hàng"
            android:textSize="18sp"
            android:textAlignment="center"
            android:alpha="0.5"/>
    </RelativeLayout>
</RelativeLayout>