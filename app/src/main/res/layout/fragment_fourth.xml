<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthFragment">

    <View
        android:id="@+id/v_profile_bg"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn A"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:layout_marginStart="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        android:layout_marginStart="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/roundedCornersImageView"
        android:id="@+id/iv_avatar"
        android:background="@drawable/round_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/avatar"
        android:src="@drawable/avatar"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:scaleType="fitCenter"/>
    <ImageButton
        android:id="@+id/ib_change_avatar"
        android:background="@drawable/round_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="98dp"
        android:layout_marginStart="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_camera"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:scaleType="fitCenter"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_profile_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_profile_in4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Thông tin tài khoản"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_person"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_switch_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Chuyển tài khoản"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_swap"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GIỚI THIỆU/HƯỚNG DẪN"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:background="#EEEEEE"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_instruction"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Hướng dẫn sử dụng"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_book"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_term_of_use"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Điều khoản quy định"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_shield"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_question"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Hỏi đáp"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_question"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="TƯƠNG TÁC"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:background="#EEEEEE"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_language"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ngôn ngữ"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_language"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_setting"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cài đặt"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_setting"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_logout"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_logout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_logout"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_logout3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_logout"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>
    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>