<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsOrderActivity">
    <TextView
        android:id="@+id/textview_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết đơn hàng"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="#3E87EC"
        android:paddingBottom="70dp"
        android:paddingTop="50dp"/>
    <ImageButton
        android:id="@+id/imgBtn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_back"
        android:layout_marginTop="51dp"
        android:layout_marginStart="15dp"/>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_bill"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp">
            <TextView
                android:id="@+id/txt_orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã đơn hàng"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/sky_blue"
                android:drawableLeft="@drawable/ic_goods_id_number"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày tạo"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/txt_orderid"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:drawableTint="@color/sky_blue"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/txt_orderid_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/txt_orderid"
                android:layout_alignTop="@id/txt_orderid"
                android:layout_below="@id/txt_orderid"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/txt_date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/06/2021"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/txt_orderid"
                android:layout_below="@id/txt_orderid_data"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:layout_marginEnd="10dp" />
            <TextView
                android:id="@+id/txt_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch vụ"
                android:layout_below="@id/txt_date"
                android:drawableLeft="@drawable/ic_baseline_airport_shuttle_24"
                android:drawableTint="@color/sky_blue"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/txt_service_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển phát tiết kiệm"
                android:layout_toRightOf="@id/txt_orderid"
                android:layout_below="@id/txt_date"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_bill"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_sender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin người gửi"
                            android:fontFamily="sans-serif"
                            android:background="@color/cream"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/sky_blue"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:textStyle="bold"/>
                        <ImageButton
                            android:id="@+id/ib_expand_sender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_right_arrow"
                            android:background="@color/cream"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            app:tint="@color/sky_blue"
                            />
                        <LinearLayout
                            android:id="@+id/linear_sender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/txt_sender"
                            android:paddingBottom="10dp"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="16sp"
                                android:drawablePadding="7dp"
                                android:drawableTint="@color/sky_blue"
                                android:drawableLeft="@drawable/ic_person"
                                />
                            <TextView
                                android:id="@+id/txt_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:drawableLeft="@drawable/ic_phone"
                                android:layout_marginLeft="10dp"
                                android:drawableTint="@color/sky_blue"
                                android:drawablePadding="5dp"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/txt_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_location"
                                android:drawableTint="@color/sky_blue"
                                android:layout_marginLeft="10dp"
                                android:drawablePadding="5dp"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_bill"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin người nhận"
                            android:fontFamily="sans-serif"
                            android:background="@color/cream"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/sky_blue"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="5dp"/>
                        <ImageButton
                            android:id="@+id/ib_expand_receiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_right_arrow"
                            android:background="@color/cream"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            app:tint="@color/sky_blue"
                            />
                        <LinearLayout
                            android:id="@+id/linear_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/txt_receiver"
                            android:paddingBottom="10dp"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/txt_name_receiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:textSize="16sp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/sky_blue"
                                android:drawableLeft="@drawable/ic_person"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/txt_phone_receiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:drawableLeft="@drawable/ic_phone"
                                android:drawableTint="@color/sky_blue"
                                android:drawablePadding="5dp"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/txt_address_receiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_location"
                                android:drawableTint="@color/sky_blue"
                                android:drawablePadding="5dp"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_bill"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin vận chuyển"
                            android:fontFamily="sans-serif"
                            android:background="@color/cream"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/sky_blue"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/sky_blue"/>
                        <ImageButton
                            android:id="@+id/ib_expand_delivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_right_arrow"
                            android:background="@color/cream"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            app:tint="@color/sky_blue"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textview_bill"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_package"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thông tin hàng hóa"
                                android:fontFamily="sans-serif"
                                android:background="@color/cream"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/sky_blue"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:drawableLeft="@drawable/ic_baseline_card_giftcard_24"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/sky_blue"/>
                            <ImageButton
                                android:id="@+id/ib_expand_package"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right_arrow"
                                android:background="@color/cream"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="6dp"
                                app:tint="@color/sky_blue" />
                        </RelativeLayout>
                        <ListView
                            android:id="@+id/lst_package"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dividerHeight="5dp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_total_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng trọng lượng"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_total_weight_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:padding="10dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_bill"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hình ảnh sản phẩm"
                            android:fontFamily="sans-serif"
                            android:background="@color/cream"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/sky_blue"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/sky_blue"/>
                        <ImageButton
                            android:id="@+id/ib_expand_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_right_arrow"
                            android:background="@color/cream"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            app:tint="@color/sky_blue" />
                        <ImageView
                            android:id="@+id/iv_image_package"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:layout_below="@id/txt_image"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textview_bill"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_fee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phí đơn hàng"
                                android:fontFamily="sans-serif"
                                android:background="@color/sky_blue"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/white"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_delivery_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phí vận chuyển"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_delivery_fee_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:padding="10dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_sub_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phụ phí"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_sub_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 đ"
                                android:layout_alignParentEnd="true"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:padding="10dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_coupon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khuyến mại"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_coupon_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 đ"
                                android:layout_alignParentEnd="true"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:padding="10dp"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DDD"
                            android:layout_marginHorizontal="10dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_total_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng tiền"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_total_fee_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:padding="10dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>