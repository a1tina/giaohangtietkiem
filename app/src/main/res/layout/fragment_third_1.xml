    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_ads1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="5dp">
            <ImageView
                android:id="@+id/iv_ads1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/drawableleft_money"/>

            <TextView
                android:id="@+id/tv_ads1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_ads1"
                android:paddingVertical="5dp"
                android:text="Ưu đãi"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/open_sans_semibold" />
            <TextView
                android:id="@+id/tv_ads1"
                android:fontFamily="@font/open_sans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ads1_title"
                android:layout_toEndOf="@id/iv_ads1"
                android:text="@string/ads1"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:drawablePadding="20dp"
                app:drawableEndCompat="@drawable/ic_right_arrow" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

